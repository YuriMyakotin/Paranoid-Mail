<Window x:Class="Paranoid.AccountsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Paranoid"
        Title="Paranoid Mail Accounts"
        Background="{StaticResource BgColor}"
        ResizeMode="NoResize"
        ShowInTaskbar="True"
        SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow">
	<StackPanel>
		<ListBox x:Name="AccountsBox"
		         Width="300"
		         Height="150"
		         Margin="10,10,10,5"
		         DisplayMemberPath="AccountNameStr"
		         IsTabStop="True"
		         ItemsSource="{Binding}" />
		<StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
			<Button Click="NewButton_OnClick" Content="New" />
			<Button Margin="5,0,5,0"
			        Command="local:MyCommands.EditAccountCmd"
			        CommandParameter="{Binding SelectedItem,
			                                   ElementName=AccountsBox}"
			        Content="Change" />
			<Button Command="local:MyCommands.DeleteAccountCmd"
			        CommandParameter="{Binding SelectedItem,
			                                   ElementName=AccountsBox}"
			        Content="Delete" />
		</StackPanel>
		<StackPanel HorizontalAlignment="Right">
			<Button Margin="0,8,10,8"
			        Click="CancelButton_OnClick"
			        Content="Close" />
		</StackPanel>
	</StackPanel>
</Window>
