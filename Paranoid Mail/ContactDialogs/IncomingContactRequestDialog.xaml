<Window x:Class="Paranoid.IncomingContactRequestDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:Paranoid"
        Title="Incoming contact request"
        Background="{StaticResource BgColor}"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStyle="ToolWindow">
    <StackPanel Margin="5">
        <TextBlock Margin="0,0,0,5"
                   HorizontalAlignment="Center"
                   FontWeight="Bold"
                   Text="Incoming contact request from:" />
        <TextBlock x:Name="ContactNameTextBlock" HorizontalAlignment="Center" />
        <TextBox x:Name="MessageTextBlock"
                 Width="300"
                 Height="60"
                 Margin="0,5,0,5"
                 VerticalContentAlignment="Top"
                 IsReadOnly="True"
                 TextWrapping="Wrap" />
        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
            <Button Click="AcceptButton_OnClick" Content="Accept" />
            <Button Click="RejectButton_OnClick" Content="Reject" />
        </StackPanel>
    </StackPanel>
</Window>
