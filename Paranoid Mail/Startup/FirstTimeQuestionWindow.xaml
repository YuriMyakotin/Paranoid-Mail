<Window x:Class="Paranoid.FirstTimeQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Paranoid Mail"
        Background="{StaticResource BgColor}"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        WindowStartupLocation="CenterScreen"
        WindowStyle="ToolWindow">
	<StackPanel Margin="10">
		<TextBlock Width="350"
		           Margin="4"
		           FontSize="18"
		           Text="Do you have existing accounts data file or want create new one? "
		           TextAlignment="Center"
		           TextWrapping="Wrap" />
		<Button Width="350"
		        Height="50"
		        Click="ButtonNew_OnClick"
		        Content="Create New"
		        FontSize="21" />
		<Button Width="350"
		        Height="50"
		        Click="ButtonExisting_OnClick"
		        Content="Use Existing"
		        FontSize="21" />
		<Button Width="350"
		        Height="50"
		        Content="Close Paranoid Mail"
		        FontSize="21"
		        IsCancel="True" />
	</StackPanel>
</Window>
