<Window x:Class="Paranoid.FirstTimeQuestionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Background="{StaticResource BgColor}"
        ResizeMode="NoResize"
        SizeToContent="WidthAndHeight"
        Topmost="True"
        WindowStartupLocation="CenterScreen"
        WindowStyle="None">
    <StackPanel Margin="10">
        <TextBlock Width="350"
                   Margin="4"
                   FontSize="24"
                   FontWeight="Bold"
                   Text="Welcome to Paranoid Mail!"
                   TextAlignment="Center" />
        <TextBlock Width="350"
                   Margin="4,4,4,10"
                   FontSize="16"
                   Text="Do you have existing accounts data file or want create new one?"
                   TextAlignment="Center"
                   TextWrapping="Wrap" />
        <Button Width="350"
                Height="50"
                Click="ButtonNew_OnClick"
                Content="Create New"
                FontSize="21" />
        <Button Width="350"
                Height="50"
                Click="ButtonExisting_OnClick"
                Content="Use Existing"
                FontSize="21" />
        <Button Width="350"
                Height="50"
                Content="Close Paranoid Mail"
                FontSize="21"
                IsCancel="True" />
    </StackPanel>
</Window>
